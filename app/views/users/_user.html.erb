<li>
   <span class="profile-pic smaller-pic"><%= gravatar_image_tag user.email.downcase %></span>
   <%= link_to user.name, user %>
   <% if current_user.admin? %>
   <div class="r-float">
     <%= link_to image_tag("delete.png"), user, :method => :delete, :confirm => "Are you sure you want to delete the record for #{user.name}?",
                                :title => "Delete #{user.name}" %>
  </div>
  <% end %>
   
</li>
