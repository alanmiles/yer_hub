<%= link_to image_tag("pageback.png", :title => "Admin home"), admin_home_path, :class => "magnify" %>
<div class="r-float">
  <%= link_to "Add an absence category", new_abscat_path %>
</div>

<div id="listing">
  
  <ul class="no_dec"> 
    <% @abscats.each do |abscat| %>
      <li>
        <%= link_to abscat.abbreviation, edit_abscat_path(abscat) %>
        -
        <%= abscat.category %>
        <div class="r-float">
          <% unless abscat.approved? %>
            <span class="subtext">
              <%= link_to "Approval?", edit_abscat_path(abscat) %>
            </span>
          <% end %>
          <%= link_to image_tag("delete.png"), abscat, :method => :delete, :confirm => "Are you sure you want to delete this absence category?",
                                :title => "Delete '#{abscat.category}'" %>
        </div>
      </li>
    <% end %>
  </ul>
  
</div>
