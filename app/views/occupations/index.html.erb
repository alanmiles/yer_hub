<%= link_to image_tag("pageback.png", :title => "Admin home"), admin_home_path, :class => "magnify" %>
<div class="r-float">
  <%= link_to "Add an occupation", new_occupation_path %>
</div>

<div id="listing">
  
  <ul class="no_dec"> 
    <% @occupations.each do |occupation| %>
      <li>
        <%= link_to occupation.occupation, edit_occupation_path(occupation) %>
        <div class="r-float">
          <% unless occupation.approved? %>
            <span class="subtext">
              <%= link_to "Approval?", edit_occupation_path(occupation) %>
            </span>
          <% end %>
          <%= link_to image_tag("delete.png"), occupation, :method => :delete, :confirm => "Are you sure you want to delete '#{occupation.occupation}'?",
                                :title => "Delete '#{occupation.occupation}'" %>
        </div>
      </li>
    <% end %>
  </ul>
  
</div>
